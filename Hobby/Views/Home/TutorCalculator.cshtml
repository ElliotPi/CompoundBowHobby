@{
    ViewData["Title"] = "TutorCalculator";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>Compound Bow Tutoring Calculator</h1>
    <form>
        <label for="hours">Enter number of hours needed:</label>
        <input type="number" id="hours" min="1" required>
        <br>
        <br>
        <label>Hourly Rate:</label>
        <input type="text" id="hourlyRate" value="$20" readonly>
        <br>
        <br>
        <button type="button" id="calculateBtn">Calculate Total</button>
    </form>
    <br>
    <br>
    <label for="total">Total:</label>
    <input type="text" id="total" readonly>
    <br>
    <br>
    <a href="@Url.Action("Index", "Home")">Back to Home</a>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/TutorCalculator.js"></script>
</body>
</html>

